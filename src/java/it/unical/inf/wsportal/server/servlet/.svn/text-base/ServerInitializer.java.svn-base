package it.unical.inf.wsportal.server.servlet;

import it.unical.inf.wsportal.server.FoldersNFiles;
import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

/**
 *
 * @author Carmine Dodaro {carminedodaro@gmail.com}, Simone Spaccarotella {spa.simone@gmail.com}
 */
public class ServerInitializer extends HttpServlet {

    /**
     *
     * @throws ServletException
     */
    @Override
    public void init() throws ServletException {
        // get the real path of this app
        FoldersNFiles.setRootPath(getServletContext().getRealPath("/"));
    }

    /**
     *
     * @param req
     * @param resp
     * @throws ServletException
     * @throws IOException
     */
    @Override
    protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
        resp.sendRedirect("home.jsp");
    }
}
